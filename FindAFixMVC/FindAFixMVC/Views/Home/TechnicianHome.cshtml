@model FindAFixMVC.Models.DBContext.TechnicianProfile

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_LayoutTechnician.cshtml";
}
<center>
    <div class="w3-container w3-teal w3-center w3-padding-64">
        <br />
        <h1 class="w3-margin w3-jumbo">Technician Profile</h1>

        <div>

            <dl>

                <dt>
                    <h4>@Html.DisplayNameFor(model => model.TechPicture)</h4>
                </dt>

                <dd>
                    @{
                        var base64 = Convert.ToBase64String(Model.TechPicture);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }

                    <img src="@imgSrc" height="25%" width="25%" />
                    @*@Html.DisplayFor(model => model.TechPicture)*@
                </dd>

                <dt>
                    <h4>@Html.DisplayNameFor(model => model.Description)</h4>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    <h4>@Html.DisplayNameFor(model => model.Rating)</h4>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Rating)
                </dd>

                

            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Back to List", "Index")
        </p>



    </div>
</center>

